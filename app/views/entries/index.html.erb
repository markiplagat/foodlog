<% content_for :title do %>
  Foodlog &dash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>
<div class="columns mt-6 is-centered">
  <% @entries.each do |entry| %>
    <div class="column is-one-quarter">
      <div class="card">
        <header class="card-header">
          <div class="card-header-title"><%= entry.meal_type %></div>
        </header>
        <div class="card-content">
          <div class="content">
            <p><span class="has-text-weight-bold"><%= entry.calories %></span> calories</p>
            <p><span class="has-text-weight-bold"><%= entry.proteins %></span> grams of proteins </p>
            <p><span class="has-text-weight-bold"><%= entry.carbohydrates %></span> grams of carbohydrates </p>
            <p><span class="has-text-weight-bold"><%= entry.fats %></span> grams of fats</p>
            <p class="italic">Logged <%= time_ago_in_words(entry.created_at) %> ago.</p>
          </div>
        </div>
        <div class="card-footer">
          <%= link_to 'Show', entry, class: 'card-footer-item button is-success is-small' %>
          <%= link_to 'Edit', edit_entry_path(entry), class: 'card-footer-item button is-info is-small' %>
          <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }, class: 'card-footer-item button is-danger is-small' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>
